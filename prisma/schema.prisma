generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Message {
  id          String   @id
  type        String
  conversation String
  body        String
  handled     Boolean  @default(false)
  createdAt   DateTime @default(now()) @map("created_at")

  @@map("messages")
}

model Conversation {
  id          String   @id @default(uuid())
  channelId   String   @map("channel_id")
  message     String
  createdAt   DateTime @default(now()) @map("created_at")

  @@map("conversations")
}
